@model Blog
@{
    ViewData["Title"] = "Delete";
}

<div class="col-xl-6">
    <div class="card">
        <div class="card-body">
            <img src="@Model.ImagePath" style="width:150px" />
            <h4 class="card-title">@Model.Date</h4>
            <h4 class="card-title">@Model.ByWhom</h4>
            <p class="card-title-desc">@Model.Description</p>
            <div class="d-flex flex-wrap gap-2">
                <form method="post" asp-route-id="@Model.Id">
                    <button type="Submit" class="btn btn-danger waves-effect waves-light">Delete</button>
                </form>
                <button asp-action="Index" class="btn btn-light waves-effect">Back to List</button>
            </div>
        </div>
    </div>
</div>


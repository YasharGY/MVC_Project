@model Blog
@{
    ViewData["Title"] = "Update";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-4">Update</h4>

        <form method="post">
            <div class="row mb-4">
                <label asp-for="Date" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Date" class="form-control" id="horizontal-firstname-input" placeholder="Date">
                    <span class="text-danger" asp-validation-for="Date"></span>
                </div>
            </div>
             <div class="row mb-4">
                <label asp-for="ByWhom" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="ByWhom" class="form-control" id="horizontal-firstname-input" placeholder="Bywhom">
                    <span class="text-danger" asp-validation-for="ByWhom"></span>
                </div>
            </div>
            <div class="row mb-4">
                <label asp-for="Description" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Description" class="form-control" id="horizontal-firstname-input" placeholder="Description">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="row mb-4">
                <label asp-for="ImagePath" class="col-sm-3 col-form-label">Select Image </label>
                <div class="col-sm-9">
                    <input asp-for="ImagePath" class="form-control" id="horizontal-firstname-input" placeholder="Image">
                    <span class="text-danger" asp-validation-for="ImagePath"></span>
                </div>
            </div>


            <div class="row justify-content-end">
                <div class="col-sm-9">

                    <div>
                        <button type="submit" class="btn btn-primary w-md">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!-- end card body -->
</div>

@section Script{
    <partial name="_ValidationScript" />
}
